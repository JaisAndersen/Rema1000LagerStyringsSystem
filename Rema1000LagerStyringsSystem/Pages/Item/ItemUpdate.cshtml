@page "{Id}"
@model Rema1000LagerStyringsSystem.ItemUpdateModel
@{
    ViewData["Title"] = "RedigereVare";
}
<h1>Redigere</h1>
<form method="post">
    <div class="form-group">
        <label asp-for="item.Id" class="control-label">ID</label>
        <input asp-for="item.Id" class="form-control" readonly />
        <span asp-validation-for="@Model.item.Id" class="text-danger"></span>
    </div>
    <div>
        <label asp-for="@Model.item.StorageType" class="control-label">Varekategori</label>
        <select asp-for="@Model.item.StorageType" asp-items="@Html.GetEnumSelectList<StorageType>()">
            <option selected="selected" value="">Vælg et kategori</option>
        </select>
        <span asp-validation-for="@Model.item.StorageType" class="text-danger"></span>
    </div>
    <div>
        <label asp-for="@Model.item.Brand" class="control-label">Mærke</label>
        <input asp-for="@Model.item.Brand" class="form-control" />
        <span asp-validation-for="@Model.item.Brand" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="@Model.item.Name" class="control-label">Navn</label>
        <input asp-for="@Model.item.Name" class="form-control" />
        <span asp-validation-for="@Model.item.Name" class="text-danger"></span>
    </div>
    <div>
        <label asp-for="@Model.item.Price" class="control-label">Pris</label>
        <input asp-for="@Model.item.Price" class="form-control" />
        <span asp-validation-for="@Model.item.Price" class="text-danger"></span>
    </div>
    <div>
        <label asp-for="@Model.item.Quantity" class="control-label">Antal på lageret</label>
        <input asp-for="@Model.item.Quantity" class="form-control" />
        <span asp-validation-for="@Model.item.Quantity" class="text-danger"></span>
    </div>

    <p></p>
    <div class="form-group">
        <input type="submit" value="Redigere" class="btn btn-primary" />
    </div>
    <div>
        <a asp-page="ItemPrint">Tilbage til alle varer</a>
    </div>
</form>